<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:id="@+id/product_recImage"
            android:src="@drawable/uploadimg"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:id="@+id/product_recName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/product_recImage"
            android:gravity="end"
            android:text="ProductName"
            android:textColor="@color/lavender"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/product_recDesc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_recName"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/product_recImage"
            android:gravity="end"
            android:maxLines="1"
            android:text="productDescription"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/product_recPrice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_recDesc"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/product_recImage"
            android:gravity="start"
            android:maxLines="1"
            android:text="productPrice"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/product_recDesc">

            <ImageButton
                android:id="@+id/product_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                app:srcCompat="@android:drawable/ic_input_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_imageButton"
                android:layout_centerHorizontal="true"
                android:text="طلب مبادلة"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>