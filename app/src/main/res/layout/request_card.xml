<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    android:orientation="vertical"
    app:cardElevation="8dp">

    <TextView
        android:id="@+id/request_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="20dp"
        android:text="requester email"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/request_recCard"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/request_recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimg"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/request_recTitle"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/request_recImage"
            android:gravity="end"
            android:text="ProductCategory"
            android:textColor="@color/lavender"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/request_recDesc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_recTitle"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/request_recImage"
            android:gravity="end"
            android:maxLines="1"
            android:text="Description"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/request_recDesiredCategory"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_recDesc"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/request_recImage"
            android:gravity="end"
            android:maxLines="1"
            android:text="desiredCategory"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/request_recDesc">

            <ImageButton
                android:id="@+id/request_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/request_imageButton"
                android:layout_centerHorizontal="true"
                android:text="عرض "
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>