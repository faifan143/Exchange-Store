        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/dealProduct_detailedProductImage"
            android:padding="8dp"
            android:layout_gravity="center"
            android:src="@drawable/uploadimg"
            android:scaleType="fitXY"/>


