<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.InChatScreen"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/contact_header"
        android:background="@color/purple"
        >


    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="name"
        android:gravity="start"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/contact_email"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/contact_name"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/contact_number"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/contact_email"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="number"
        android:textColor="@color/white"
        android:textSize="14sp" />

    </LinearLayout>

    <!-- Chat messages list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_messages_list"
        android:layout_below="@id/contact_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/chat_input_layout"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical" />
    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No messages"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>


    <!-- Chat input layout -->
    <LinearLayout
        android:id="@+id/chat_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="8dp">

        <!-- Chat message input field -->
        <EditText
            android:id="@+id/chat_input_field"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="اكتب شيئاً..."
            android:textColorHint="@android:color/darker_gray" />

        <!-- Send button -->
        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ارسال" />
    </LinearLayout>
</RelativeLayout>
