<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<permission android:name="android:permission.INTERNET"/>
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Exchange"
        tools:targetApi="31">




        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>


        <activity
            android:name=".auth.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>

        <activity
            android:name=".activities.RequestsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <activity
            android:name=".activities.RequestDetailedPostActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <activity
            android:name=".activities.DealsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <activity
            android:name=".activities.DealDetailedPostActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>

        <activity
            android:name=".auth.Signup"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>

        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>

        <activity
            android:name=".activities.InChatScreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <activity
            android:name=".activities.PostActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <activity
            android:name=".activities.ChatActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <activity
            android:name=".activities.DetailedPostActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Exchange.NoActionBar">
        </activity>
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>